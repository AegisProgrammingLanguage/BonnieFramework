import "lib/http.aeg"
import "packages/tera/tera.aeg"
import "stdlib/file.aeg"

func render(template_path: string, context: dict) -> Response {
    if (File.exists(template_path)) {
        var content = File.read(template_path)
        return new Response(Template.render(content, context), 200)
    }
    else {
        print "[ERROR] Template ${template_path} not found."
    }
}
